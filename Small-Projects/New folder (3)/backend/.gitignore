# Root gitignore for React (frontend) + Node/Express (backend)

# Dependencies
node_modules/
**/node_modules/

# Production builds
build/
dist/
**/build/
**/dist/

# Logs
logs
*.log
npm-debug.log*
yarn-debug.log*
yarn-error.log*
pnpm-debug.log*

# Runtime data
pids
*.pid
*.seed
*.pid.lock

# Coverage
coverage/
**/coverage/
.nyc_output/

# Env files (DO NOT COMMIT SECRETS)
.env
.env.*
**/.env
**/.env.*

# Local env overrides
.env.local
.env.development.local
.env.test.local
.env.production.local

# Cache
.cache/
**/.cache/
.parcel-cache/
.eslintcache
.stylelintcache
.tscache/
.vite/
**/.vite/

# Framework/Tooling
.next/
.nuxt/
.svelte-kit/
.docusaurus/
storybook-static/
.turbo/

# Editor/OS
.DS_Store
Thumbs.db
.vscode/
.idea/
*.swp
*.swo

# Docker
.docker/
docker-compose.override.yml

# Debug/Profiling
*.stackdump
*.orig
*.rej

# Temporary files
tmp/
temp/
**/tmp/
**/temp/

# Images generated
*.png
*.jpg
*.jpeg
*.gif
*.webp
*.ico
!frontend/public/**

# React specific
frontend/.env*
frontend/.pnp*
frontend/pnp.*

# Backend specific
backend/.env*
backend/uploads/
